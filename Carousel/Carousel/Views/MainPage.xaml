<?xml version="1.0" encoding="UTF-8"?>
<CarouselPage Title="Carousel Using CarouselPage"
              xmlns:views="clr-namespace:Carousel.Views"
	          xmlns="http://xamarin.com/schemas/2014/forms" 
              xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
              x:Class="Carousel.Views.MainPage">
    <CarouselPage.Padding>
        <OnPlatform x:TypeArguments="Thickness">
            <On Platform="iOS">
                10, 20, 10, 5
            </On>
            <On Platform="Android">
                10, 0, 10, 5
            </On>
        </OnPlatform>
    </CarouselPage.Padding>
    <CarouselPage.Children>
        <views:Content1Page Title="Hello A" />
        <views:Content2Page  Title="Hello B"/>
    </CarouselPage.Children>
</CarouselPage>
